{
	"name": "tobimori/kirby-tailwind-merge",
	"description": "Tailwind Merge for Kirby CMS",
	"version": "4.0.0",
	"type": "kirby-plugin",
	"keywords": [
		"kirby",
		"kirby-plugin"
	],
	"license": "MIT",
	"authors": [
		{
			"name": "Tobias MÃ¶ritz",
			"email": "tobias@moeritz.io",
			"homepage": "https://moeritz.io"
		}
	],
	"require": {
		"php": ">=8.3.0",
		"getkirby/composer-installer": "^1.2",
		"tales-from-a-dev/tailwind-merge-php": "^0.1"
	},
	"require-dev": {
		"getkirby/cms": "^4.0 || ^5.0"
	},
	"scripts": {
		"dist": "composer install --no-dev --optimize-autoloader"
	},
	"config": {
		"optimize-autoloader": true,
		"allow-plugins": {
			"getkirby/composer-installer": true
		}
	},
	"autoload": {
		"psr-4": {
			"tobimori\\": "classes/"
		},
		"files": [
			"helpers.php"
		]
	}
}
